<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:theme="@style/NoActionBar"
    android:background="@color/red_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_button"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/text_black"
            android:text="Kriptografi"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="48sp"/>

        <TextView
            style="@style/text_black"
            android:text="Digital Signature Algorithm"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp">

        <Button
            android:id="@+id/btn_generate_signature"
            style="@style/button_red"
            android:text="Generate Signature"/>

        <Button
            android:id="@+id/btn_verify_signature"
            style="@style/button_red"
            android:text="Verify Signature"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_about"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:background="@drawable/circle_red_button"
        android:text="i"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>